<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutfileitem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >
    <TextView 
        android:id="@+id/name"
        android:layout_width="@dimen/surfscreen.namecolumn"
        android:layout_height="wrap_content"  
        android:textColor="@color/black"      
        android:text="@string/surfscreen.namecolumnlabel"
        />
    <TextView 
        android:id="@+id/type"
        android:layout_width="@dimen/surfscreen.typecolumn"
        android:layout_height="wrap_content" 
        android:textColor="@color/black"   
        android:text="@string/surfscreen.typecolumnlabel"      
        />
    <TextView 
        android:id="@+id/duration"
        android:layout_width="@dimen/surfscreen.durationcolumn"
        android:layout_height="wrap_content"   
        android:textColor="@color/black"   
        android:text="@string/surfscreen.durationcolumnlabel"    
        />
     <TextView 
        android:id="@+id/size"
        android:layout_width="@dimen/surfscreen.sizecolumn"
        android:layout_height="wrap_content"  
        android:textColor="@color/black"  
        android:text="@string/surfscreen.sizecolumnlabel"      
        />
</LinearLayout>