<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lab.and402.nhut.and402lab2_cloudbackup.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/backup_cloud_data"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/displayarea1"
        android:layout_below="@+id/title"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_data"
            android:id="@+id/data_to_save"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/saved_data"
            android:id="@+id/data_to_load"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/displayarea2"
        android:layout_below="@+id/displayarea1"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:gravity="left|top"
            android:layout_weight="1"
            android:hint="Enter data"
            android:id="@+id/savedata_et"
            />
        <TextView
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:gravity="left|top"
            android:layout_weight="1"
            android:hint="Read data"
            android:id="@+id/loaddata_tv"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayarea2"
        android:text="Backup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/save"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayarea2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Restore"
        android:id="@+id/load"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save"
        android:text="BkFile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/uploadfile"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/load"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="RtFile"
        android:id="@+id/downloadfile"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:gravity="left|top"
        android:layout_below="@+id/uploadfile"
        android:id="@+id/resulttv"
        />
</RelativeLayout>
