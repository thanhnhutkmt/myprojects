<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#ff0004</item>
        <item name="colorPrimaryDark">@color/black_overlay</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="SlideTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyActionBarTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:colorBackground">#8202ff</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/backgroundanim</item>
        <item name="android:windowExitAnimation">@anim/blur</item>
    </style>

    <style name="MyTitle" >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">#7000</item>
        <item name="android:shadowDx">12</item>
        <item name="android:shadowDy">12</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MyTextView1">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">-4</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="MyTextView2">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">-4</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="MyTextView3" >
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/mtv3size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="MyTextView4">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#faff9c</item>
        <item name="android:shadowDx">12</item>
        <item name="android:shadowDy">12</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="MyTextView5">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/holo_red_light</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">24</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="MyImageView6">
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#2b12e4</item>
        <item name="android:shadowDx">12</item>
        <item name="android:shadowDy">12</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:shadowRadius">18</item>
        <item name="android:background">#5bedefed</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:alpha">0.5</item>
    </style>
    <style name="MyButton">
        <item name="android:background">@drawable/buttondrawable</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MyBackground1" >
        <item name="android:background">#ddf0f4</item>
    </style>
    <style name="MyBackground2" >
        <item name="android:background">#e3e9ff</item>
    </style>

    <style name="MyImageView">
        <item name="android:background">@drawable/frameimageview</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>
