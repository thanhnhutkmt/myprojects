<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/linear_interpolator"
    android:repeatMode="restart">
    <scale android:fromXScale="0.6" android:fromYScale="0.6"
        android:toXScale="1.4" android:toYScale="1.4"
        android:duration="1000" android:fillBefore="false"
        />
    <scale android:fromXScale="1.4" android:fromYScale="1.4"
        android:toXScale="0.6" android:toYScale="0.6"
        android:duration="1000" android:fillBefore="false"
        />
</set>