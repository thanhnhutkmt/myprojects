<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_slide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="software.nhut.personalutilitiesforlife.SlideActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/album_imv"
        android:layout_x="0dp"
        android:layout_y="0dp" />

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/album_videoview" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/touchlayer"
        android:layout_x="0dp"
        android:layout_y="0dp">

    </HorizontalScrollView>

    <CheckBox
        android:text="@string/chkbox_SlideActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="170dp"
        android:layout_y="525dp"
        android:id="@+id/checkBox_random" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_x="130dp"
        android:layout_y="535dp"
        android:id="@+id/txt_shelf"
        android:text="1/20"
        android:gravity="right" />

</AbsoluteLayout>
